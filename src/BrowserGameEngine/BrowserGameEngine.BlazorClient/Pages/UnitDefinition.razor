@page "/unitdefinitions"
@using BrowserGameEngine.Shared
@inject HttpClient Http

<h1>Units</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (unitDefinitions == null) {
    <p><em>Loading...</em></p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Angriff</th>
                <th>Verteidigung</th>
                <th>Kosten</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unitDef in unitDefinitions) {
                <tr>
                    <td>@unitDef.Id</td>
                    <td>@unitDef.Name</td>
                    <td>@unitDef.Attack</td>
                    <td>@unitDef.Defense</td>
                    <td>@unitDef.Cost</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private UnitDefinitionViewModel[]? unitDefinitions;

    protected override async Task OnInitializedAsync() {
        unitDefinitions = await Http.GetFromJsonAsync<UnitDefinitionViewModel[]>("api/unitdefinitions");
    }

}
