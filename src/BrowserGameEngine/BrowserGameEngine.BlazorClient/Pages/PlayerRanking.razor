@page "/ranking"
@using BrowserGameEngine.Shared
@inject HttpClient Http

<h1>Units</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (playerRanking == null) {
    <p><em>Loading...</em></p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Punkte</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in playerRanking) {
                <tr>
                    <td>@item.PlayerId</td>
                    <td>@item.PlayerName</td>
                    <td>@item.Score</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private PlayerRankingViewModel[]? playerRanking;

    protected override async Task OnInitializedAsync() {
        playerRanking = await Http.GetFromJsonAsync<PlayerRankingViewModel[]>("api/playerranking");
    }

}
